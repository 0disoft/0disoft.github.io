---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="py-24 md:py-32">
    <h1 class="font-display text-5xl md:text-7xl mb-4">Hello, I'm ZeroDi!</h1>
    <p class="max-w-3xl my-8 text-lg text-secondary leading-relaxed">
      An indie developer turning ideas into reality with code. Here, I share my
      development journey, completed projects, and thoughts.
    </p>
    <div class="flex gap-4 mt-10">
      <a href="/projects" class="btn-solid"> View Projects </a>
      <a href="/blog" class="btn-outline"> Read the Blog </a>
    </div>
  </div>
</BaseLayout>
