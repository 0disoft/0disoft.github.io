---
// src/pages/contact.astro
//
// @file 연락처 페이지
// @description 협업, 아이디어 공유 등 연락을 위한 링크 목록을 제공하는 페이지입니다.
//              BaseLayout을 사용하여 일관된 페이지 구조를 유지합니다.
// @version 1.0.0

// 연락처 링크 데이터를 가져옵니다.
import { CONTACT_LINKS } from "@/consts";
// 기본 레이아웃 컴포넌트를 가져옵니다.
import BaseLayout from "@/layouts/BaseLayout.astro";

// 페이지의 제목과 설명을 정의합니다.
// 이는 BaseLayout 컴포넌트에 props로 전달되어 SEO 메타 태그를 생성하는 데 사용됩니다.
const pageTitle = "Contact";
const pageDescription =
  "Get in touch with ZeroDi for collaborations, ideas, or just a chat.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="mb-12">
    <h1 class="font-display text-[2.5em]">Contact Me</h1>
    <p class="text-secondary dark:text-dark-secondary mt-4">
      I'm always open to discussing new projects, creative ideas, or
      opportunities.
    </p>
  </div>

  <div class="max-w-2xl">
    <div class="flex flex-col gap-6">
      {
        CONTACT_LINKS.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 p-5 border border-border rounded-lg no-underline transition-all hover:(border-accent bg-elementHoverBg dark:border-dark-secondary dark:bg-dark-elementHoverBg)"
          >
            <div
              class:list={[
                link.icon,
                "w-8 h-8 text-secondary dark:text-dark-secondary transition-colors group-hover:text-accent dark:group-hover:text-dark-secondary",
              ]}
            />
            <span class="text-[1.1em] font-medium text-primary dark:text-dark-primary transition-colors group-hover:text-accent dark:group-hover:text-dark-secondary">
              {link.name}
            </span>
          </a>
        ))
      }
    </div>
  </div>
</BaseLayout>
