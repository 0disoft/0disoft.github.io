---
// src/layouts/BaseLayout.astro
//
// @file BaseLayout 컴포넌트
// @description 모든 페이지에 적용되는 기본 레이아웃. HTML 뼈대, SEO,
//              공통 헤더 및 전역 스타일을 관리합니다.
// @version 1.0.0

// 필수 컴포넌트 및 유틸리티를 가져옵니다.
// src/layouts/BaseLayout.astro
import Header from "@/components/Header.astro";
import SEO from "@/components/SEO.astro";
import { SITE } from "@/consts";
import "@/styles/global.css";
import "@unocss/reset/tailwind.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE.TITLE, description = SITE.DESCRIPTION } = Astro.props;

// Google Analytics 추적 ID를 상수로 직접 정의합니다.
const GTAG_ID = "G-JKJT327TYE";
---

<!doctype html>
<html lang={Astro.currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <SEO title={title} description={description} />

    <script is:inline>
      // 테마 및 폰트 크기 설정 스크립트 (기존과 동일)
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();
      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      const FONT_LEVEL_KEY = "font-size-level";
      const FONT_LEVELS = 9;
      const DEFAULT_FONT_LEVEL = Math.ceil((FONT_LEVELS + 1) / 2);
      const savedLevelStr = localStorage.getItem(FONT_LEVEL_KEY);
      const level = savedLevelStr
        ? parseInt(savedLevelStr, 10)
        : DEFAULT_FONT_LEVEL;
      document.documentElement.style.setProperty(
        "--font-size-multiplier",
        `calc(0.8 + 0.05 * ${level})`
      );
    </script>

    {
      GTAG_ID && (
        <>
          <script
            async
            type="text/partytown"
            src={`https://www.googletagmanager.com/gtag/js?id=${GTAG_ID}`}
          />
          <script type="text/partytown">
            window.dataLayer = window.dataLayer || [];
            function gtag() {
              dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", `{GTAG_ID}`);
          </script>
        </>
      )
    }

    <ClientRouter />
  </head>
  <body>
    <div class="flex flex-col lg:flex-row">
      <Header />
      <main class="grow p-4 md:p-8 lg:p-16 max-w-full lg:max-w-65rem mx-auto">
        <slot />
      </main>
    </div>

    <script src="@/scripts/theme-controller.ts"></script>
    <script src="@/scripts/code-copy.ts"></script>
    <script src="@/scripts/mobile-menu.ts"></script>

    <script is:inline>
      document.addEventListener("astro:after-swap", () => {
        // Theme & Font Size 유지
        const theme = localStorage.getItem("theme");
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        const FONT_LEVEL_KEY = "font-size-level";
        const FONT_LEVELS = 9;
        const DEFAULT_FONT_LEVEL = Math.ceil((FONT_LEVELS + 1) / 2);
        const savedLevelStr = localStorage.getItem(FONT_LEVEL_KEY);
        const level = savedLevelStr
          ? parseInt(savedLevelStr, 10)
          : DEFAULT_FONT_LEVEL;
        document.documentElement.style.setProperty(
          "--font-size-multiplier",
          `calc(0.8 + 0.05 * ${level})`
        );

        // GA 페이지뷰 이벤트 전송 (클라이언트 사이드 라우팅 시)
        if (typeof gtag === "function" && `{GTAG_ID}`) {
          gtag("config", `{GTAG_ID}`, {
            page_path: window.location.pathname,
          });
        }
      });
    </script>
  </body>
</html>
