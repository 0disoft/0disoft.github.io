---
// src/layouts/BaseLayout.astro
//
// @file BaseLayout 컴포넌트
// @description 모든 페이지에 적용되는 기본 레이아웃. HTML 뼈대, SEO,
//              공통 헤더 및 전역 스타일을 관리합니다.
// @version 1.0.0

// 필수 컴포넌트 및 유틸리티를 가져옵니다.
import Header from "@/components/Header.astro";
import SEO from "@/components/SEO.astro";
import { GA, SITE } from "@/consts";
import "@/styles/global.css";
import "@unocss/reset/tailwind.css";
import { ClientRouter } from "astro:transitions";

/**
 * @interface Props
 * @description BaseLayout 컴포넌트의 props 인터페이스.
 * @property {string} [title] - 페이지 제목. SEO 컴포넌트에 전달됩니다.
 * @property {string} [description] - 페이지 설명. SEO 컴포넌트에 전달됩니다.
 * @property {string} [lang] - HTML lang 속성. 기본값은 "en"입니다.
 */
interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

// props의 기본값을 설정합니다.
// TODO(seungmin): SITE.TITLE과 SITE.DESCRIPTION의 기본값 설정을
//                `SEO` 컴포넌트로 이동하여 중복을 제거할 수 있습니다.
const {
  title = SITE.TITLE,
  description = SITE.DESCRIPTION,
  lang = "en",
} = Astro.props;

// Google Analytics(GA) 추적 ID를 환경 변수에서 가져옵니다.
// Partytown 스크립트에서 사용됩니다.
const GA_TRACKING_ID = import.meta.env.PUBLIC_GA_TRACKING_ID;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <SEO title={title} description={description} />

    <script is:inline>
      // 페이지 로딩 시점에 테마(라이트/다크)를 결정하는 로직
      // 1. localStorage에 저장된 테마가 있는지 확인
      // 2. 없으면 prefers-color-scheme 미디어 쿼리를 사용
      // 3. 최종적으로 "light"를 기본값으로 사용
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      // 테마에 따라 <html> 요소에 'dark' 클래스를 추가/제거
      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }

      // Font Size: localStorage에 저장된 폰트 크기 레벨을 적용하는 로직
      // 폰트 크기 조절 기능의 일관성을 유지하기 위해 사용
      const FONT_LEVEL_KEY = "font-size-level";
      const FONT_LEVELS = 9;
      const DEFAULT_FONT_LEVEL = Math.ceil((FONT_LEVELS + 1) / 2);
      const savedLevelStr = localStorage.getItem(FONT_LEVEL_KEY);
      const level = savedLevelStr
        ? parseInt(savedLevelStr, 10)
        : DEFAULT_FONT_LEVEL;
      document.documentElement.style.setProperty(
        "--font-size-multiplier",
        `calc(0.8 + 0.05 * ${level})`
      );
    </script>

    <script
      type="text/partytown"
      src={`https://www.googletagmanager.com/gtag/js?id=${GA_TRACKING_ID}`}
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", `{${GA_TRACKING_ID}}`);
    </script>

    <ClientRouter />
  </head>
  <body>
    <div class="flex flex-col lg:flex-row">
      <Header />
      <main class="grow p-4 md:p-8 lg:p-16 max-w-full lg:max-w-65rem mx-auto">
        <slot />
      </main>
    </div>

    <script src="../scripts/theme-controller.ts"></script>
    <script src="../scripts/code-copy.ts"></script>
    <script src="../scripts/mobile-menu.ts"></script>

    <script is:inline>
      document.addEventListener("astro:after-swap", () => {
        // Theme & Font Size 유지
        const theme = localStorage.getItem("theme");
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        const FONT_LEVEL_KEY = "font-size-level";
        const FONT_LEVELS = 9;
        const DEFAULT_FONT_LEVEL = Math.ceil((FONT_LEVELS + 1) / 2);
        const savedLevelStr = localStorage.getItem(FONT_LEVEL_KEY);
        const level = savedLevelStr
          ? parseInt(savedLevelStr, 10)
          : DEFAULT_FONT_LEVEL;
        document.documentElement.style.setProperty(
          "--font-size-multiplier",
          `calc(0.8 + 0.05 * ${level})`
        );

        // GA 이벤트 전송
        if (typeof gtag === "function" && `{${GA_TRACKING_ID}}`) {
          gtag("config", `{${GA_TRACKING_ID}}`, {
            page_path: window.location.pathname,
          });
        }
      });
    </script>
  </body>
</html>
